/* AI Development Environment Manager TUI Styles */

Screen {
    layout: vertical;
}

/* Button Bar */
#button-bar {
    width: 100%;
    height: 5;
    padding: 1;
    background: $surface-darken-1;
    align: left middle;
}

#button-bar Button {
    margin-right: 1;
    min-width: 12;
}

/* Filter Bar */
#filter-bar {
    width: 100%;
    height: 5;
    padding: 1;
    background: $surface-darken-2;
    align: left middle;
}

#filter-bar Label {
    width: auto;
    height: 3;
    margin-right: 1;
    content-align: center middle;
}

#filter-bar Select {
    width: 24;
    height: 3;
    margin-right: 2;
}

/* Resource List */
#resource-list {
    width: 100%;
    height: 1fr;
    margin: 1;
    border: solid $primary;
    padding: 0 1;
}

.resource-item {
    width: 100%;
    height: 3;
    padding: 0 1;
    align: left middle;
}

.resource-item:hover {
    background: $primary 20%;
}

.resource-item:focus-within {
    background: $primary 30%;
}

.resource-item Checkbox {
    width: auto;
    min-width: 30;
}

.resource-source {
    width: auto;
    margin-left: 2;
    color: $text-muted;
    text-style: italic;
}

/* Add Skills Modal */
AddSkillsModal {
    align: center middle;
}

#add-skills-dialog {
    width: 70;
    height: auto;
    max-height: 80%;
    border: thick $primary;
    background: $surface;
    padding: 1 2;
}

#add-skills-dialog #title {
    text-align: center;
    text-style: bold;
    width: 100%;
    height: 3;
    content-align: center middle;
    color: $text;
}

#add-skills-dialog Label {
    margin-top: 1;
}

#add-skills-dialog #package-input {
    width: 100%;
    margin: 1 0;
}

#add-skills-dialog #examples {
    color: $text-muted;
    margin: 1 0;
    padding: 1;
    background: $surface-darken-1;
}

#button-row {
    width: 100%;
    height: 5;
    align: center middle;
    margin: 1 0;
}

#button-row Button {
    margin: 0 1;
    min-width: 12;
}

#add-skills-dialog #output-label {
    margin-top: 1;
}

#add-skills-dialog #output-log {
    width: 100%;
    height: 10;
    border: solid $primary;
    margin-top: 1;
}
